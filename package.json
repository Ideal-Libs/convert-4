{
  "name": "convert-4",
  "version": "0.0.3",
  "description": "convert-4 is a simple library for converting between units of measurement.",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "repository": {
    "type": "git",
    "url": "https://github.com/ideal-libs/convert-4.git",
    "directory": "packages"
  },
  "keywords": [
    "convert",
    "units",
    "measurement"
  ],
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/ideal-libs/convert-4/issues"
  },
  "files": [
    "dist/",
    "docs/",
    "README.md",
    "LICENSE"
  ],
  "scripts": {
    "build": "tsc -p tsconfig.build.json",
    "start": "node dist/index.js",
    "test": "jest",
    "test:cov": "jest --coverage"
  },
  "author": {
    "name": "Daniel dos Santos Fonseca"
  },
  "devDependencies": {
    "@types/jest": "^29.5.12",
    "jest": "^29.7.0",
    "prettier": "^3.3.3",
    "ts-jest": "^29.2.3",
    "typescript": "^5.5.3"
  },
  "jest": {
    "testEnvironment": "node",
    "roots": [
      "test"
    ],
    "coverageDirectory": "build/coverage",
    "collectCoverageFrom": [
      "packages/**/*.ts"
    ],
    "transform": {
      "^.+\\.(t|j)s$": "ts-jest"
    },
    "coveragePathIgnorePatterns": [
      "index.ts"
    ],
    "coverageProvider": "v8",
    "coverageThreshold": {
      "global": {
        "branches": 80,
        "functions": 80,
        "lines": 80,
        "statements": 80
      }
    }
  }
}
